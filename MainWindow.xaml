<Window x:Class="MgrokUtil.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MgrokUtil"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="10">
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <TextBlock FontWeight="SemiBold" Text="Config path:" />
                <TextBlock Text="{Binding Path}" TextWrapping="Wrap" />

                <TextBlock Margin="0,6,0,0" FontWeight="SemiBold" Text="Auth token (optional):" />
                <TextBlock Text="{Binding AuthToken}" TextWrapping="Wrap" />

                <TextBlock Margin="0,6,0,0" FontWeight="SemiBold" Text="Network:" />
                <TextBlock Text="{Binding Network}" TextWrapping="Wrap" />

                <TextBlock Margin="0,6,0,0" FontWeight="SemiBold" Text="IpBase (optional):" />
                <TextBlock Text="{Binding IpBase}" TextWrapping="Wrap" />

                <TextBlock Margin="0,6,0,0" Foreground="DarkRed" Text="{Binding Error}" TextWrapping="Wrap" />
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <GroupBox Header="Raw YAML" Grid.Column="0" Margin="0,0,5,0">
                <TextBox Text="{Binding RawYaml}" IsReadOnly="True" FontFamily="Consolas" TextWrapping="NoWrap"
                         HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
            </GroupBox>

            <GroupBox Header="Elements" Grid.Column="1" Margin="5,0,0,0">
                <TreeView ItemsSource="{Binding RootNodes}">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <TextBlock Text="{Binding}" />
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
